GIT_AUTHOR_NAME=Your Name
GIT_AUTHOR_EMAIL=you@example.com

# Anthropic API-nøkkel (påkrevd for opencode)
ANTHROPIC_API_KEY=sk-ant-...

# Gradle version to pre-download into the image (default: 9.3.1)
GRADLE_VERSION=9.3.1

# Ports exposed by opencode-gradle for running applications (default: 8080, 8081)
# NOTE: Port mappings are set at container creation time. If you change these
# after opencode-gradle is already running, remove the old container first:
#   docker rm -f opencode-gradle
GRADLE_PORT_1=8080
GRADLE_PORT_2=8081
